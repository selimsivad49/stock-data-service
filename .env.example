# MongoDB設定
MONGODB_URL=mongodb://admin:password@mongo:27017/stock_data?authSource=admin
DATABASE_NAME=stock_data

# API設定
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging設定
LOG_LEVEL=INFO

# yfinance設定
YFINANCE_TIMEOUT=30

# Security設定
MONGO_PASSWORD=password

# JWT Settings (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Key Settings
API_KEY_EXPIRE_DAYS=365

# Rate Limiting Settings
AUTHENTICATED_RATE_LIMIT=2000
UNAUTHENTICATED_RATE_LIMIT=100

# Performance設定
UVICORN_WORKERS=1

# Cache設定
CACHE_DEFAULT_TTL=3600
CACHE_STOCK_INFO_TTL=86400
CACHE_DAILY_PRICES_TTL=3600
CACHE_FINANCIALS_TTL=21600