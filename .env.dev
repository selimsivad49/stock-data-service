# Development Environment Configuration

# MongoDB設定
MONGODB_URL=mongodb://admin:password@mongo:27017/stock_data?authSource=admin
DATABASE_NAME=stock_data

# API設定
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging設定
LOG_LEVEL=DEBUG

# yfinance設定
YFINANCE_TIMEOUT=30

# Security設定
MONGO_PASSWORD=password

# JWT Settings (Development Only)
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120

# API Key Settings
API_KEY_EXPIRE_DAYS=30

# Rate Limiting Settings (Relaxed for development)
AUTHENTICATED_RATE_LIMIT=5000
UNAUTHENTICATED_RATE_LIMIT=500

# Performance設定
UVICORN_WORKERS=1

# Cache設定（開発環境では短く設定）
CACHE_DEFAULT_TTL=300
CACHE_STOCK_INFO_TTL=1800
CACHE_DAILY_PRICES_TTL=300
CACHE_FINANCIALS_TTL=600